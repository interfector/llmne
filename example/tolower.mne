#!/usr/local/bin/llmne -x
# to lower and display

DISPLAY CHAR

LOW_LOOP:

LOAD STRING
CMP NULL
JZ WRITE_LOOP

INC LOW_LOOP

# lowerize

LOAD STRING
DEC ONE
CMP CAP_A
JM INCR

INC ONE

CMP CAP_Z
INC ONE
JG INCR

DEC ONE

ADD GAP

SAVE STRING

INCR:

INC LOW_LOOP+4
INC LOW_LOOP+14
JMP LOW_LOOP

WRITE_LOOP:

LOAD STRING
CMP NULL
JZ WRITE_LOOP+7

INC WRITE_LOOP
WRITE STRING
INC WRITE_LOOP+4
JMP WRITE_LOOP

EXIT 0

GAP:
0032

ONE:
0001

NULL:
0000

CAP_A:
0065

CAP_Z:
0090

STRING:
0072 'H'
0101 'e'
0076 'L'
0108 'l'
0079 'O'
0032 ' '
0087 'W'
0111 'o'
0082 'R'
0108 'l'
0068 'D'
0010 '\n'
